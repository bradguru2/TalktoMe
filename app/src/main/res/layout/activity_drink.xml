<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff93d7ff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/food_footer"
        android:id="@+id/txtFooter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:background="#ffc1c3c6"
        android:onClick="onCategoryClick" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/drink"
        android:id="@+id/txtDrinkHeader"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/txtDrinkHeader"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtFooter">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgPepsi"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/pepsi"
                android:clickable="true"
                android:onClick="onPepsiClick"
                android:contentDescription="@string/drink"
                android:cropToPadding="false"
                android:layout_alignParentEnd="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgWater"
                android:src="@drawable/water"
                android:clickable="true"
                android:onClick="onWaterClick"
                android:contentDescription="@string/drink"
                android:cropToPadding="false"
                android:layout_below="@id/imgPepsi"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgGrapefruit"
                android:src="@drawable/grapefruit_juice"
                android:clickable="true"
                android:onClick="onGrapefruit"
                android:contentDescription="@string/drink"
                android:cropToPadding="false"
                android:layout_below="@id/imgWater"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgLemonade"
                android:src="@drawable/lemonade"
                android:clickable="true"
                android:onClick="onLemonade"
                android:contentDescription="@string/drink"
                android:cropToPadding="false"
                android:layout_below="@id/imgGrapefruit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgOrange"
                android:src="@drawable/orange_juice"
                android:clickable="true"
                android:onClick="onOrange"
                android:contentDescription="@string/drink"
                android:cropToPadding="false"
                android:layout_below="@id/imgLemonade"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="30dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
