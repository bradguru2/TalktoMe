<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff93d7ff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/food_footer"
        android:id="@+id/txtFooter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:background="#ffc1c3c6"
        android:onClick="onCategoryClick" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/expressions"
        android:id="@+id/txtExpressionsHeader"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewExpressions"
        android:layout_below="@+id/txtExpressionsHeader"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtFooter">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageExcited"
                android:src="@drawable/excited"
                android:clickable="true"
                android:onClick="onExcited"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageHappy"
                android:src="@drawable/happy"
                android:clickable="true"
                android:onClick="onHappy"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/imageExcited"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSad"
                android:src="@drawable/sad"
                android:clickable="true"
                android:onClick="onSad"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_below="@+id/imageHappy"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:scrollbarStyle="outsideOverlay" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageColor"
                android:src="@drawable/color"
                android:clickable="true"
                android:onClick="onColor"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_below="@+id/imageSad"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageSleep"
                android:src="@drawable/sleep"
                android:clickable="true"
                android:onClick="onSleep"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_below="@+id/imageColor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagePark"
                android:src="@drawable/park"
                android:clickable="true"
                android:onClick="onPark"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_below="@+id/imageSleep"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageTV"
                android:src="@drawable/tv"
                android:clickable="true"
                android:onClick="onTV"
                android:contentDescription="@string/expressions"
                android:cropToPadding="false"
                android:paddingLeft="30dp"
                android:layout_below="@+id/imagePark"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
